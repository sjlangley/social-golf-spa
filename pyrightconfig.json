{
  "include": [
    "apps/golf-api/src",
    "apps/golf-api/tests",
    "apps/handicap-calculator/src",
    "apps/handicap-calculator/tests"
  ],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "**/.*"
  ],
  "extraPaths": [
    "apps/golf-api/src",
    "apps/handicap-calculator/src"
  ],
  "venvPath": ".",
  "pythonVersion": "3.13",
  "typeCheckingMode": "basic",
  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "reportUnknownMemberType": false,
  "reportUnknownVariableType": false,
  "reportUnknownArgumentType": false
}
